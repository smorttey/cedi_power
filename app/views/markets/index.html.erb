<div class="animate-fade-in">
  <header class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Markets</h1>
    <p class="mt-2 text-gray-600 dark:text-gray-400">Find the best prices across Ghana's markets</p>
  </header>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @markets.each do |market| %>
      <div class="market-card animate-slide-up">
        <%= link_to market_path(market.slug), class: "block" do %>
          <h2 class="market-title"><%= market.name %></h2>
          <p class="market-location"><%= market.location %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
