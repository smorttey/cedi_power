<div class="container mx-auto py-8">
  <h1 class="text-3xl font-bold mb-6">Markets</h1>
  <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @markets.each do |market| %>
      <li class="p-4 bg-white rounded shadow hover:shadow-lg">
        <%= link_to market.name, market_path(market.slug), class: "text-xl font-semibold text-blue-500 hover:underline" %>
        <p class="text-sm text-gray-600"><%= market.location %></p>
      </li>
    <% end %>
  </ul>
</div>
