<div class="container mx-auto py-8">
  <h1 class="text-3xl font-bold mb-6">Categories</h1>
  <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @categories.each do |category| %>
      <li class="p-4 bg-white rounded shadow hover:shadow-lg">
        <%= link_to category.name, category_path(category.slug), class: "text-xl font-semibold text-blue-500 hover:underline" %>
      </li>
    <% end %>
  </ul>
</div>
