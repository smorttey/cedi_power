<div class="animate-fade-in p-4 sm:p-0">
  <header class="mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">Categories</h1>
    <p class="mt-2 text-gray-600 dark:text-gray-400">Browse items by category to find what you need</p>
  </header>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @categories.each do |category| %>
      <div class="card p-6 hover:shadow-lg transition-shadow animate-slide-up">
        <%= link_to category_path(category.slug), class: "block" do %>
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400">
                <%= category.name %>
              </h2>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                <%= pluralize(category.items.count, 'item') %> available
              </p>
            </div>
            <div class="text-gray-400 dark:text-gray-500">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
