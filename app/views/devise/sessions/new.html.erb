<div class="auth-container">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <%= link_to root_path, class: "flex justify-center" do %>
      <span class="text-2xl font-bold text-blue-600 dark:text-blue-400">Cedi Power</span>
    <% end %>
    <h2 class="auth-title">Sign in to your account</h2>
  </div>

  <div class="mt-8">
    <div class="auth-card">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", 
              class: "form-input", placeholder: "you@example.com" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "form-input", placeholder: "••••••••" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 
                  text-blue-600 focus:ring-blue-500" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900 
                  dark:text-gray-300" %>
            </div>
          </div>
        <% end %>

        <%= f.submit "Sign in", class: "btn-primary w-full mt-6" %>
      <% end %>

      <div class="auth-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
